[label,start_priestperil]
%priestperil = ^priestperil_started;
~send_quest_progress(questlist:priestperil, %priestperil, ^priestperil_complete);
~chatplayer("<p,neutral>Sure. I don't have anything better to do right now.");
~chatnpc("<p,happy>Many thanks adventurer! I would have sent one of my squires but they wanted payment for it!");

[queue,priestperil_complete]
inv_add(inv, dagger_wolfbane, 1);
stat_advance(prayer, 14060);
session_log(^log_adventure, "Quest complete: Priest in Peril");
~send_quest_complete(questlist:priestperil, dagger_wolfbane, 250, ^priestperil_questpoints, "You have completed the\\nPriest In Peril Quest!");
